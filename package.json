{
  "name": "commit-action",
  "version": "1.0.0",
  "description": "Commit changes via GitHub API (signed commits, bypasses rulesets)",
  "main": "dist/commit.js",
  "scripts": {
    "build": "tsc",
    "bundle": "ncc build src/commit-runner.ts -o dist",
    "test": "jest",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "commit": "tsx src/commit-runner.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "github",
    "actions",
    "commit",
    "git",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2"
  }
}
